#!/bin/env groovy

// Check remote host properties
//    disableConcurrentBuilds()

properties([

    parameters([
	string(name: 'myvar1', description: 'Example of parameter', defaultValue: 'var1_value'),
	string(name: 'myvar2', description: 'Example of parameter', defaultValue: '22222')
		])
	])

println params.myvar1

pipeline {
    agent { 
        label 'server'
        }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
    }
    stages {
        stage("PREPARE") {
            steps {
                sh 'echo Cleaning workspace'
                cleanWs()
            }
        }
        stage("Second step") {
            steps {
                sh 'hostname'
            }
        }
    }
}
