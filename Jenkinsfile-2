#!/bin/env groovy
// Check remote host properties
//properties([disableConcurrentBuilds()])

def myvar = ''
properties([
    parameters([
	string(name: 'myvar', description: 'Example of parameter', defaultValue: 'Ooooo')
		])
	])


pipeline {
    agent { 
        label 'server'
        }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
    }
    stages {
        stage("PREPARE") {
            steps {
                sh 'echo Cleaning workspace'
                cleanWs()
            }
        }
        stage("Second step") {
            steps {
                sh 'hostname'
            }
        }
    }
}
