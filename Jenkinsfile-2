#!/bin/env groovy

// Check remote host properties
//    disableConcurrentBuilds()

properties([

    parameters([
	string(name: 'myvar1', description: 'Make BUILD stage?', defaultValue: 'make'),
	string(name: 'myvar2', description: 'Example of parameter', defaultValue: '22222')
		])
	])

println params.myvar1

pipeline {
    agent { 
        label 'server'
        }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
    }

    environment {
	dockerImage = ''
	registry = "nixuss/test:app"
//	dockerHubCredential = '...'
    }

    stages {
        stage("PREPARE") {
            steps {
                sh 'echo Cleaning workspace'
                cleanWs()
            }
        }

	stage("Git clone") {
		steps {
		git branch: 'branch2', changelog: 'false', credentialsId: 'jenkins-container-privkey', url: 'git@github.com:nixuss/test.git'		
		}		
	}

        stage("Info step") {
            steps {
                sh 'pwd'
		sh 'id'
		sh 'ls'
            }
        }

	stage("BUILD") {
	    when {
		expression {
		    params.var1 == 'make'              
			}	            
		}
	    steps {
		script {
		    dockerImage = docker.build registry			
			}	
		}		
	}

        stage("CLEAN") {
            steps {
                sh 'echo Cleaning workspace'
                cleanWs()
            }
        }

    }
}
